<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_margin="20dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:background="@drawable/back_square_dark"
        >

        
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >





            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Patient Name"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="18dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginTop="0dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtPersonName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ahmad Saeed"
                android:fontFamily="@font/arima_madurai_black"
                android:textColor="@color/mycolor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="ID Number"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtPersonID"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="A784-4353-52255-2"
                android:fontFamily="@font/arima_madurai_black"
                android:textColor="@color/mycolor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />






            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phone Number"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtPersonPhone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="050123456"
                android:fontFamily="@font/arima_madurai_black"
                android:textColor="@color/mycolor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />



            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="TYPE"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtExamType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="VIP"
                android:fontFamily="@font/arima_madurai_black"
                android:textColor="@color/mycolor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Price"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="19dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00 AED"
                android:fontFamily="@font/arima_madurai_black"
                android:textColor="@color/mycolor"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="No Of People"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="19dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtPersons"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="00"
                android:fontFamily="@font/arima_madurai_black"
                android:textColor="@color/mycolor"
                android:textStyle="bold"
                android:textSize="24dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Date and Time"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="15dp"
                android:fontFamily="sans-serif-smallcaps"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" />

            <TextView
                android:id="@+id/txtDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Monday,15 Nov 2020"
                android:fontFamily="@font/arima_madurai_black"
                android:textColor="@color/mycolor"
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_marginTop="5dp"
                android:gravity="center_vertical" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Appointment Code"
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:gravity="center_vertical" />

            <ImageView
                android:id="@+id/imgCode"
                android:layout_width="wrap_content"
                android:scaleType="fitXY"
                android:layout_height="80dp"
                android:src="@drawable/code"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal" />


            <TextView
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mark AS "
                android:fontFamily="sans-serif-smallcaps"
                android:textColor="@color/gray"
                android:textStyle="bold"
                android:textSize="20dp"
                android:gravity="center_vertical" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:layout_gravity="center_horizontal"

                >



                <Button
                    android:id="@+id/btnMarkAsNegative"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:text="Negative"
                    android:backgroundTint="@color/green"
                    />
                <Button
                    android:id="@+id/btnMarkAsPositive"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_gravity="end"
                    android:padding="10dp"
                    android:layout_marginLeft="10dp"
                    android:text=" Positive"
                    android:backgroundTint="@color/red"
                    />

            </LinearLayout>

        </LinearLayout>


    </LinearLayout>



</LinearLayout>