<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Create_Account">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="243dp"
            android:layout_height="106dp"
            android:src="@drawable/icon"
            android:layout_gravity="center_horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0" />


        <TextView
            android:id="@+id/Reg_text"
            android:layout_width="273dp"
            android:layout_height="49dp"
            android:background="#794B9F97"
            android:fontFamily="@font/arima_madurai_black"
            android:text="Registration"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:textColor="#FFFFFF"
            android:textSize="30sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            app:layout_constraintVertical_bias="0.079" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="20dp"
            >




            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Please enter your 6-Digits Pin"
                android:gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"

                >

                <EditText
                    android:id="@+id/firstDigit"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"
                    />


                <EditText
                    android:id="@+id/secondDigit"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:background="@drawable/rounded_edittext"
                    android:layout_marginLeft="10dp" />


                <EditText
                    android:id="@+id/thirdDigit"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:maxLength="1"
                    android:background="@drawable/rounded_edittext"
                    />

                <EditText
                    android:id="@+id/fourthDigit"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_edittext"
                    />
                <EditText
                    android:id="@+id/fivthDigit"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_edittext"
                    />
                <EditText
                    android:id="@+id/sixthDigit"
                    android:layout_width="40dp"
                    android:layout_height="50dp"
                    android:maxLength="1"
                    android:gravity="center"
                    android:inputType="number"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/rounded_edittext"
                    />


            </LinearLayout>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Didnt get a code?"
                android:gravity="center"
                android:textSize="20dp"
                android:textStyle="bold"
                />


            <TextView
                android:id="@+id/textResendCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Resend Code"
                android:gravity="center"
                android:textSize="20dp"
                android:textColor="#00BCD4"

                />


            <Button
                android:id="@+id/btnCreate"
                android:layout_width="300dp"
                android:layout_marginTop="20dp"
                android:layout_gravity="center_horizontal"
                android:layout_height="52dp"
                android:text="Create Account"
                android:textStyle="bold"
                app:backgroundTint="#28818D"
                />


        </LinearLayout>
    </LinearLayout>
</ScrollView>