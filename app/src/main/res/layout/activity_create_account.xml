<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Activities.Create_Account">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="243dp"
        android:layout_height="106dp"
        android:src="@drawable/icon"
        android:layout_gravity="center_horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />


    <TextView
        android:id="@+id/Reg_text"
        android:layout_width="273dp"
        android:layout_height="49dp"
        android:background="#794B9F97"
        android:fontFamily="@font/arima_madurai_black"
        android:text="Registration"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView3"
        app:layout_constraintVertical_bias="0.079" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="20dp"
        >





    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Emirates ID Number"
            android:textStyle="bold"
            />



        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scan ID"
            android:textStyle="bold"
            android:textColor="@color/teal_700"

            />
    </LinearLayout>


    <EditText
        android:id="@+id/editTextEmiratesId"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:digits="-0123456789"
        android:maxLength="17"
        android:inputType="number"
        android:background="@drawable/rounded_edittext"
        android:hint="000-0000-000000-0"
        android:drawableRight="@drawable/ic_card" />




    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mobile Number"
        android:textStyle="bold"
        />
    <EditText
        android:id="@+id/editTextMobileNum"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:padding="10dp"
        android:maxLength="13"
        android:inputType="phone"
        android:background="@drawable/rounded_edittext"
        android:hint="+9710000000000"
        android:drawableRight="@drawable/ic_mobile" />



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            >
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="First Name"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/editTextFirstName"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Ahmad"
                    android:padding="10dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/rounded_edittext"
                    />

            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Name"
                    android:textStyle="bold"
                    />

                <EditText
                    android:id="@+id/editTextLastName"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Ahmad"
                    android:padding="10dp"
                    android:background="@drawable/rounded_edittext"
                    />

            </LinearLayout>




        </LinearLayout>



        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email Address"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/editTextEmail"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:inputType="textEmailAddress"
            android:background="@drawable/rounded_edittext"
            android:hint="e.g example@gmail.com"
            android:drawableRight="@drawable/ic_email" />


        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textStyle="bold"
            />
        <EditText
            android:id="@+id/editTextPass"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:padding="10dp"
            android:background="@drawable/rounded_edittext"
            android:hint="*******"
            android:inputType="textPassword"
            android:drawableRight="@drawable/ic_password" />




        <Button
            android:id="@+id/btnCreate"
            android:layout_width="300dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center_horizontal"
            android:layout_height="52dp"
            android:text="Create Account"
            android:textStyle="bold"
            app:backgroundTint="#28818D"
          />




        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="OR"
                android:textStyle="bold"
                android:textSize="20dp"
                />
            <TextView
                android:id="@+id/txtSignIn"
               android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SignIn"
                android:onClick="onClickLogin"
                android:textColor="#28818D"
                android:textStyle="bold"
                android:textSize="20dp"
                />

        </LinearLayout>


    </LinearLayout>
    </LinearLayout>
</ScrollView>